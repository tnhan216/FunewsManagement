@model IEnumerable<BusinessObjects.SystemAccount>

@{
    ViewData["Title"] = "Index";
}

<h1>System Accounts</h1>

<!-- Form Tìm Kiếm -->

<div class="row mb-3">
    <form method="get" asp-action="Index" class="mb-3 col-md-6">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Search accounts..." value="@Context.Request.Query["search"]">
            <button type="submit" class="btn btn-primary">Search</button>
            <a asp-action="Index" class="btn btn-secondary">Reset</a>
        </div>
    </form>
    <div class="col-md-6 text-end">
        <form method="get" asp-action="Index" class="d-inline">
            <input type="hidden" name="search" value="@Context.Request.Query["search"]" /> 
            <select name="sortBy" class="form-select w-auto d-inline-block" onchange="this.form.submit()">
                <option value="">-- Sort By --</option>
                <option value="name" selected="@(Context.Request.Query["sortBy"] == "name" ? "selected" : null)">Sort by Name</option>
                <option value="email" selected="@(Context.Request.Query["sortBy"] == "email" ? "selected" : null)">Sort by Email</option>
                <option value="role" selected="@(Context.Request.Query["sortBy"] == "role" ? "selected" : null)">Sort by Role</option>
            </select>
            <button type="submit" class="btn btn-primary">Sort</button>
        </form>
    </div>
</div>
<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Create New
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AccountName</td>
                <td>@item.AccountEmail</td>
                <td>@item.AccountRole</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AccountId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.AccountId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.AccountId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
